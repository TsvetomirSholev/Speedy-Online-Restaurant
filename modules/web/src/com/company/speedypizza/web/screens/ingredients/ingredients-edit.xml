<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.company.speedypizza.web.screens.ingredients">
    <data>
        <instance id="ingredientsDc"
                  class="com.company.speedypizza.entity.Ingredients"
                  view="ingredients-view">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="ingredientsDc">
            <column width="250px">
                <textField id="ingredientTypeField" property="ingredientType"/>
                <pickerField id="dishTypesField" property="dishTypes">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
